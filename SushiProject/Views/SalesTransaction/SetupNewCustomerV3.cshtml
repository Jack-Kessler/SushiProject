@model IEnumerable<SalesTransaction>

<h2>Setup New Customer - Step 3</h2>
<hr />
@if (User.IsInRole("Guest"))
{
    <table class="table">
        <tr>
            <th>Sales Transaction ID</th>
            <th>All You Can Eat</th>
            <th>Transaction Completed</th>
            <th>Transaction Total</th>
            <th>Date &amp; Time</th>
            <th>Server</th>
            <th>Table</th>
        </tr>

        @foreach (var tran in @Model)
        {
            <tr>
                <td><a href=@Url.Action("CustomerHomePage", "SalesTransaction", new { transactionID = tran.SalesTransactionID })>@tran.SalesTransactionID</a></td>
                <td>@tran.AllYouCanEat</td>
                <td>@tran.SalesTransactionCompleted</td>
                <td>@tran.FinalTransactionAmount</td>
                <td>@tran.FinalTransactionDateAndTime</td>
                <td>@tran.EmployeeID</td>
                <td>@tran.RestaurantTableID</td>
            </tr>
        }
    </table>
    <br />
    <input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
}
@if (User.IsInRole("Server") || User.IsInRole("Chef") || User.IsInRole("Manager") || User.IsInRole("Owner"))
{
    <input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
}