@model SalesTransaction

<h2>Setup New Customer - Step 2</h2>
<hr />
@if (User.IsInRole("Guest"))
{
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form asp-controller="SalesTransaction" asp-action="SetupNewCustomer3" method="post">

            <div class="form-group">
                <input asp-for="EmployeeID" type="hidden" class="form-control" />
                <span asp-validation-for="EmployeeID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="">Assign Table</label>
                <select class="form-control" name="RestaurantTableID" value="RestaurantTableID">
                    @foreach (var table in Model.RestaurantTableList)
                    {
                        <option value="@table.RestaurantTableID">@table.RestaurantTableID</option>
                    }
                </select>
            </div>
            <br />

            <input type="submit" value="Next" class="btn btn-primary" />
        </form>
    </div>
    <br />
    <input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
}
@if (User.IsInRole("Server") || User.IsInRole("Chef") || User.IsInRole("Manager") || User.IsInRole("Owner"))
{
    <input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
}

