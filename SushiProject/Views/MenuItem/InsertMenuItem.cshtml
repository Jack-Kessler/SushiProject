@model MenuItem

<h2>Create New Menu Item</h2>

@using (Html.BeginForm("InsertMenuItemToDatabase", "MenuItem", "Post"))
{
    <input asp-for="MenuItemID" type="hidden" value="" />

    <label asp-for="MenuItemName" class="control-label">New Menu Item Name</label>
    <input type="text" name="MenuItemName" class="form-control" value="" />
    <br />

    <label asp-for="MenuItemPrice" class="control-label">Price</label>
    <input type="number" step="0.01" name="MenuItemPrice" class="form-control" />
    <br />

    <div class="form-group">
        <label for="">Select a Category</label>
        <select class="form-control" name="MenuItemCategory" value="">
            @foreach (var cat in Model.MenuItemCategories)
            {
                <option value="@cat.MenuCategoryName">@cat.MenuCategoryName</option>
            }
        </select>
    </div>
    <br/>

    <button name="button" type="reset"
            style="margin: 16px;
                   padding: 16px;
                   background-color: dimgray;
                   color: antiquewhite;
                   border: none;
                   border-radius: 4px;
                   font-size: 12px">Reset
    </button>

    <br/>
    <br/>
    <button name="button" type="submit"
            style="margin: 16px; padding: 16px; background-color: dimgray; color: antiquewhite; border: none;border-radius: 4px;font-size: 12px">Submit
    </button>
}

