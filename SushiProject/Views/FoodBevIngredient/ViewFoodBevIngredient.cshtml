@model FoodBevIngredient

<h2>@Model.IngredientName Information</h2>
<br />

@if (User.IsInRole("Chef") || User.IsInRole("Manager") || User.IsInRole("Owner"))
{
    <table class="table">
        <tr>
            <th>Ingredient ID</th>
            <th>Name</th>
            <th>Stock Level</th>
            <th>Cost (Per Unit)</th>
            <th>Category Name</th>
        </tr>
        <tr>
            <td>@Model.IngredientID</td>
            <td>@Model.IngredientName</td>
            <td>@Model.IngredientStockLevel</td>
            <td>@Model.IngredientCost</td>
            <td>@Model.IngredientCategoryName</td>
        </tr>
    </table>
    <br />
}

@if (User.IsInRole("Manager") || User.IsInRole("Owner"))
{
    <div style="display: block">
        <a href="/FoodBevIngredient/UpdateFoodBevIngredient/@Model.IngredientID">Update Ingredient</a>
    </div>
    <br />
}

@if (User.IsInRole("Owner"))
{
    <div style="display: block">

        @using (Html.BeginForm("DeleteFoodBevIngredient", "FoodBevIngredient", "Post"))
        {
            <input type="hidden" asp-for="IngredientID" value="@Model.IngredientID" />
            <input type="submit" onclick="return confirm('Are you sure you would like to delete this ingredient?')" value="Delete this product" />
        }
    </div>
}
<br />
<input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
