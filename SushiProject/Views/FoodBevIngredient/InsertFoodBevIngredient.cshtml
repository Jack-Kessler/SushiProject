@model FoodBevIngredient

<h2>Add Ingredient</h2>
<div class="row">
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <form asp-controller="FoodBevIngredient" asp-action="InsertFoodBevIngredientToDatabase" method="post">
        @*asp-route-returnurl="@ViewData["ReturnUrl"]" role="form"*@
        <div class="form-group">
            <label asp-for="IngredientName" class="col-md-2"></label>
            <input asp-for="IngredientName" class="form-control" />
            <span asp-validation-for="IngredientName" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="IngredientStockLevel" class="col-md-2"></label>
            <input asp-for="IngredientStockLevel" class="form-control" />
            <span asp-validation-for="IngredientStockLevel" class="text-danger"></span>
        </div>
        <br />

        <div class="form-group">
            <label asp-for="IngredientCost" class="col-md-2">Cost Per Unit - Between $00.00 - $99.99</label>
            <input asp-for="IngredientCost" class="form-control" />
            <span asp-validation-for="IngredientCost" class="text-danger"></span>
        </div>
        <br />

@*            <div class="form-group">
            <div class="col-md-10">
                <label asp-for="IngredientCategoryName" class="col-md-2"></label>
                <input asp-for="IngredientCategoryName" class="form-control" />
                <span asp-validation-for="IngredientCategoryName" class="text-danger"></span>
            </div>
        </div>
        <br />*@

        <div class="form-group">
            <label for="">Ingredient Category</label>
            <select class="form-control" name="IngredientCategoryName" value="">
                @foreach (var cat in Model.IngredientCategories)
                {
                    <option value="@cat.IngredientCategoryName">@cat.IngredientCategoryName</option>
                }
            </select>
        </div>
        <br />

        <input type="submit" value="Add Ingredient" class="btn btn-primary" />
    </form>
</div>

