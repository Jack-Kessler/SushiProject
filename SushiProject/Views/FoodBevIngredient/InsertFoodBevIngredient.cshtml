@model FoodBevIngredient

<h2>Add Ingredient</h2>

@using (Html.BeginForm("InsertFoodBevIngredientToDatabase", "FoodBevIngredient", "Post"))
{
    <hr />
    <div class="ingredientrow">
        <div class="col-md-4">
            <form asp-action="InsertFoodBevIngredientToDatabase">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="IngredientName" class="control-label">Ingredient Name</label>
                    <input type="text" asp-for="IngredientName" class="form-control" />
                    <span asp-validation-for="IngredientName" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="IngredientStockLevel" class="control-label">Initial Stock Level</label>
                    <input type="number" asp-for="IngredientStockLevel" class="form-control" />
                    <span asp-validation-for="IngredientStockLevel" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label asp-for="IngredientCost" class="control-label">Ingredient Cost Per Unit</label>
                    <input tyoe="number" asp-for="IngredientCost" type="number" class="form-control" />
                    <span asp-validation-for="IngredientCost" class="text-danger"></span>
                </div>
                <br />

                <div class="form-group">
                    <label for="">Ingredient Category</label>
                    <select class="form-control" name="IngredientCategoryName" value="">
                        @foreach (var cat in Model.IngredientCategories)
                        {
                            <option value="@cat.IngredientCategoryName">@cat.IngredientCategoryName</option>
                        }
                    </select>
                </div>
                <br />

                <div class="form-group">
                    <input type="submit" value="Add Ingredient" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
