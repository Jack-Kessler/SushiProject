@model SushiProject.Models.Employee
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login" method="post">
        <h1>Login</h1>
        <input type="number" placeholder="Your Employee ID" asp-for="EmployeeID" />
        <input type="text" placeholder="Your Username" asp-for="UserName"/>
        <input type="password" placeholder="Password" asp-for="Password" />

        <label>
            <input type="checkbox" asp-for="KeepLoggedIn"/>Keep Me Logged In
        </label>
        <button type="submit">Login</button>

        @if (ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>
</body>
</html>
