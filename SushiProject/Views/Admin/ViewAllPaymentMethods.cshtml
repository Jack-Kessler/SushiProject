@model IEnumerable<PaymentMethodCategory>

<h2>Payment Methods</h2>
<br />

@if (User.IsInRole("Owner"))
{
    <div style="display: block">
        <a href="/Admin/InsertPaymentMethod/">Add a New Payment Method</a>
    </div>
    <br />

    <table class="table">
        <tr>
            <th>Payment Method</th>
        </tr>
        @foreach (var pay in @Model)
        {
            <tr>
                <td><a href=/Admin/ViewSinglePaymentMethod/@pay.PaymentMethodCategoryID>@pay.PaymentMethodCategoryName</a></td>
            </tr>
        }
    </table>
    <br />
}
<br />
<input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
