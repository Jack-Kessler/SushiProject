@model IEnumerable<PaymentMethodCategory>

<h2>Payment Methods</h2>
<hr />
@if (User.IsInRole("Owner"))
{
    <div style="display: block">
        @using (Html.BeginForm("InsertPaymentMethod", "Admin", "Post"))
        {
            <input type="hidden"/>
            <input type="submit" class="StandardButtonOutline" value="Add a New Payment Method" />
        }
    </div>
    <br />

    <table class="table">
        <tr>
            <th>Payment Method</th>
        </tr>
        @foreach (var pay in @Model)
        {
            <tr>
                <td><a href=/Admin/ViewSinglePaymentMethod/@pay.PaymentMethodCategoryID>@pay.PaymentMethodCategoryName</a></td>
            </tr>
        }
    </table>
    <br />
}
<br />
<input type="button" class="StandardButtonOutline" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
