@model PaymentMethodCategory

<h2>Payment Method: @Model.PaymentMethodCategoryName</h2>
<hr />
@if (User.IsInRole("Owner"))
{
    <table class="table">
        <tr>
            <th>Payment Method</th>
        </tr>

        <tr>
            <td>@Model.PaymentMethodCategoryName</td>
        </tr>
    </table>
    <br />

    <div style="display: block">
        <a href="/Admin/UpdatePaymentMethod/@Model.PaymentMethodCategoryID">Update Payment Method</a>
    </div>
    <br />

    <div style="display: block">

        @using (Html.BeginForm("DeletePaymentMethod", "Admin", "Post"))
        {
            <input type="hidden" asp-for="PaymentMethodCategoryID" value="@Model.PaymentMethodCategoryID" />
            <input type="submit" onclick="return confirm('Are you sure you would like to delete this payment method?')" value="Delete Payment Method" />
        }
    </div>
}
<br />
<input type="button" value="Return to Main Screen" onclick="@("window.location.href='" + @Url.Action("Index", "Home") + "'");" />
